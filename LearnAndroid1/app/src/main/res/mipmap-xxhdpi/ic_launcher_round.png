@Override
public void onBackPressed() {
    if (backPressedTime + 2000 > System.currentTimeMillis()) {
        super.onBackPressed();
        return;
    } else {
        backToast = Toast.makeText(getBaseContext(), "Press back again to exit", Toast.LENGTH_SHORT);
        backToast.show();
    }

    backPressedTime = System.currentTimeMillis();
}

